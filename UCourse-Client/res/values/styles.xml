<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="perference_set_activity">
        <item name="android:windowBackground">@drawable/add</item>
        <!-- 窗口背景 -->
        <item name="android:focusable">false</item>
        <item name="android:textColor">#ff000000</item>
        <!-- 字体颜色 -->
        <item name="android:colorBackgroundCacheHint">#00000000</item>
        <!-- 背景缓存色透明，避免拖动全黑 -->
        <item name="android:windowNoTitle">false</item>
        <!-- 是否有标题 -->
    </style>

    <style name="text_view_style">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColorHint">#C7C7C7</item>
        <item name="android:textColor">#3B3B3B</item>
    </style>

    <style name="show_view_style">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#696969</item>
    </style>

    <style name="show_spinner_style">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>